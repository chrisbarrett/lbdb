m_yppasswd_query()
{
    YPCAT=@YPCAT@

    if [ -x "$YPCAT" ]	#check for ypcat
    then
	f_user="`echo \"$@\" | sed -e 's/@.*//'`"
	HOST="`lbdb_hostname`"

	$YPCAT passwd \
	| grep -ia "$f_user" \
	| sed -e "s/^\([^:]*\):[^:]*:\([^:]*\):[^:]*:\([^:,]*\)[,:].*\$/\1@$HOST	\3	UID \2/"
    fi
}
