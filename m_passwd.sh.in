m_passwd_query()
{
    HOST="`lbdb_hostname`"
    case "$PASSWD_IGNORESYS" in
	true|yes|1)
	    IGNORESYS='UID \([12]....\|....\)$'
	    ;;
        *)
	    IGNORESYS='.'
	    ;;
    esac

    sed -e "s/^\([^:]*\):[^:]*:\([^:]*\):[^:]*:\([^:,]*\)[,:].*\$/\1@$HOST	\3	UID \2/" /etc/passwd \
    | grep -ia "$@" | grep -a "$IGNORESYS" || :
}
