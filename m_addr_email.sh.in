m_addr_email_query()
{
    ADDR_EMAIL=@ADDR_EMAIL@

    if [ -x "$ADDR_EMAIL" ]		# check whether addr-email in installed
    then
	$ADDR_EMAIL "$@" \
	| sed -e 's/^\([^,]*\), \([^:]*\):	\(.*\)$/\3	\1	\2/' \
	| grep -a '@' || :
#	| sed -e 's/\(.*\):[ 	]\([^ 	].*$\)/\2	\1	addr-email/'
    fi
}
