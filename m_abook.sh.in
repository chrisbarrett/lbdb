m_abook_query()
{
    ABOOK=@ABOOK@

    if [ -x "$ABOOK" ]		# check whether abook in installed
    then
	for book in ${ABOOK_FILES:-$HOME/.abook/addressbook $HOME/.abook.addressbook}
	do
	    if [ -f "$book" ]
	    then
		$ABOOK --datafile $book --mutt-query "$@" \
		| sed -e '1d;s/$/	abook/'
	    fi
	done
    fi
}
